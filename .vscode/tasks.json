{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install All Recommended Extensions on Windows (PowerShell)",
            "type": "shell",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"code --install-extension yzhang.markdown-all-in-one; code --install-extension padjon.save-and-run-ext\"",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "shell": {
                    "executable": "powershell",
                    "args": ["-NoProfile", "-ExecutionPolicy", "Bypass"]
                }
            }
        },
        {
            "label": "Install All Recommended Extensions on Linux (Default terminal/Bash)",
            "type": "shell",
            "command": "code --install-extension yzhang.markdown-all-in-one && code --install-extension padjon.save-and-run-ext",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}
